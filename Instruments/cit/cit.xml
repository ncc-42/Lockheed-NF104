<?xml version="1.0"?>

<!--F-104C compressor inlet temperature indicator-->

<PropertyList>

<path>cit.ac</path>

<!--***rotation***-->

<animation>
	<type>rotate</type>
	<object-name>needle</object-name>
	<property>/fdm/jsbsim/propulsion/tat-c</property>
	<interpolation>
		<entry><ind>-50</ind><dep>-30</dep></entry>
		<entry><ind>0</ind><dep>0</dep></entry>
		<entry><ind>150</ind><dep>90</dep></entry>
	</interpolation>
	<center>
		<x-m>0</x-m>
		<y-m>0.006837</y-m>
		<z-m>0</z-m>
	</center>
	<axis>
		<x>-1</x>
		<y>0</y>
		<z>0</z>
	</axis>
</animation>

<!-- *** LoD *** -->

<animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
</animation>

</PropertyList>